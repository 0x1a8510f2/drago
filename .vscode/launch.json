    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Drago Development Mode",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["agent", "--dev"]
        },
        {
            "name": "Debug Drago Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["agent", "--config=./dist/server.hcl"]
        },
        {
            "name": "Debug Drago Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["agent", "--config=./dist/client1.hcl"]
        },
    ]
}